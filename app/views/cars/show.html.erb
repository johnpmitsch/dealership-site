<p id="notice"><%= notice %></p>
<%= link_to 'Back', inventory_path %>
<div class="row">
  <div class="col-md-12 center">
    <h3>
      <%= @car.year %> <%= @car.make %> <%= @car.model %>
    </h3>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div id="carousel" class="carousel slide carousel-size center" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <% @car.image.each_with_index do |image, i| %>
          <li data-target="#carousel" data-slide-to='<%= i + 1 %>'></li>
        <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active slide_image">
          <div class="slide_container">
            <%= image_tag @car.featured_image %>
          </div>
        </div>
        <% @car.image.each do |image| %>
        <div class="item slide_image">
          <div class="slide_container">
            <%= image_tag image %>
          </div>
        </div>
        <% end %>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 center well description">
      <%= @car.description %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="col-md-6 col-md-offset-3 center price">
      <h2><%= number_to_currency(@car.price, precision: 0) %></h2>
    </div>
  </div>
</div>
